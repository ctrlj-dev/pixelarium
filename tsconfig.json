{
  "compilerOptions": {
    "target": "ES2017",
    "types": ["jest", "node", "@testing-library/jest-dom"],
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "typeRoots": ["node_modules/@types"],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/types/*": ["@types/*"],
      "@components/*": ["components/*"],
      "@hooks/*": ["lib/hooks/*"],
      "@hocs/*": ["lib/hocs/*"],
      "@utils/*": ["lib/utils/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "jest.setup.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.graphql",
    "**/*.gql",
    "**/*.json"
  ],
  "exclude": ["node_modules"]
}
